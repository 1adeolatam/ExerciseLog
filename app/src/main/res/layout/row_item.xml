<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/row_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/row_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/row_item_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repetitions"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_item_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/row_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/row_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Date"
        android:textSize="15sp" />


</LinearLayout>
